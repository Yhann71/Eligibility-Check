        logic = new GradeLogic();
        performSearch(""); // Load data immediately
    }

    private void performSearch(String id) {
        // 1. Get Data (9 Columns)
        ArrayList<String[]> data = logic.searchStudent(id);
        
        // 2. Define 9 Columns exactly like your screenshot
        String[] columns = {
            "Student Name", "Student ID", "Course Name", "Course ID", 
            "Credit", "Semester", "Exam Weight", "Assignment Weight", "Result"
        };
        
        // 3. Create Model
        DefaultTableModel model = new DefaultTableModel(columns, 0);
        
        // 4. Add Rows
        for (String[] row : data) {
            model.addRow(row);
        }
        
        // 5. Apply to Table
        StdRpt_Tlb.setModel(model);
        
        if (!id.isEmpty() && data.isEmpty()) {
            javax.swing.JOptionPane.showMessageDialog(this, "No failed records found for ID: " + id);
        }
    }

    

