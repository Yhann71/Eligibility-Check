    private void refreshTable() {
        String[] columns = {
            "Student Name", "Student ID", "Course Name", 
            "Exam Mark", "Assignment Mark", "Final Grade", "Grade Point"
        };
        DefaultTableModel model = new DefaultTableModel(columns, 0);
        
        ArrayList<String[]> data = logic.getAllMarksForTable();
        for (String[] row : data) {
            model.addRow(row);
        }
        eligibility_Tlb.setModel(model);
    }
