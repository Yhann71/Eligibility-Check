    private void UtdGrd_btnActionPerformed(java.awt.event.ActionEvent evt) {                                           
       logic.updateGrade(this, eligibility_Tlb, StdID_txt, Course_txt, ExamMk_txt, AssmMk_txt);
    }                                          

    private void SendEm_btnActionPerformed(java.awt.event.ActionEvent evt) {                                           
       logic.sendRecoveryEmail(this, eligibility_Tlb);
    }                                          

    private void Del_btnActionPerformed(java.awt.event.ActionEvent evt) {                                        
        logic.deleteGrade(this, eligibility_Tlb, StdID_txt, Course_txt);
    }                                       

    private void Add_btnActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // ONE LINE call. Logic handles extraction, validation, saving, refreshing, and clearing fields.
        logic.addGrade(this, eligibility_Tlb, StdNm_txt1, StdID_txt, Course_txt, ExamMk_txt, AssmMk_txt);
    }                                       

